extends ../requirements

block layout_header
  title= title
  link(rel='stylesheet', href='/stylesheets/fullscreen.css')
  link(rel='stylesheet', href='/stylesheets/range.css')
  block header
block layout_content
  .navigation-options
    input#show(type="checkbox" checked="checked")
    label.show.button(for="show")
    .drop
      a.button.fa.fa-home(href="/")
      a.button.fa#resize
      if(desc)
        a.button.fa.fa-book
      else
        a.button.fa.fa-book.disabled
      .controls
        block controls
  canvas#draw.center(width="#{width}", height="#{height}")
  script(src="./js/fullscreen.js")
  script(src="#{src}")
  script
    |updateResizeIcon()
  .center
    .content
      block content
  block footer
